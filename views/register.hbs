{{#if errorMessage}}
  <div class="alert alert-danger" role="alert">
    <h3 class="text-center fw-bold">
      {{errorMessage}}
    </h3>

  </div>

{{/if}}

<h1 class="my-5 text-center text-light">
  Register
</h1>

<div class="w-50 p-3 m-auto text-light">
  <form class="mx-1 mx-md-4" action="/user/register" method="POST">

    <div class="d-flex flex-row align-items-center mb-4">
      <div class="form-outline flex-fill mb-0">
        <input
          type="text"
          id="name"
          name="name"
          class="form-control"
          placeholder="Name"
          required
        />
        <label class="form-label" for="name">Your Name</label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
      <div class="form-outline flex-fill mb-0">
        <input
          type="email"
          id="email"
          name="email"
          class="form-control"
          placeholder="Email"
          required
        />
        <label class="form-label" for="email">Your Email</label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
      <div class="form-outline flex-fill mb-0">
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          placeholder="Password"
        />
        <label class="form-label" for="password">Password</label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">

      <div class="form-outline flex-fill mb-0">
        <input
          type="password"
          id="password1"
          name="password1"
          class="form-control"
          placeholder="Confirm Password"
        />
        <label class="form-label" for="password1">Confirm your password</label>
      </div>
    </div>

    <div class="d-flex justify-content-start mb-5">
      <p class="me-2">Already Registerd?</p>
      <a
        href="/user/login"
        class="link-warning fw-bold"
        style="text-decoration: none;"
      >
        Login here</a>
    </div>

    <button type="submit" class="btn btn-warning btn-lg">Register</button>

  </form>
</div>